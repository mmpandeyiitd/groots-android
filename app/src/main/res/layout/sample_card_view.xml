<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_gravity="center"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="#ffffff"
        android:elevation="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/image_background"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgItemIcon"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="#ffffff"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textItemName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:paddingTop="3dp"
                        android:singleLine="true"
                        android:textColor="@color/textPrimaryDark"
                        android:text="Nasik Onion"
                        android:textSize="16dp" />




                    <TextView
                        android:id="@+id/textItemdesc"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xyz (1 Kg)"
                        android:textSize="12dp"
                        android:maxLines="1"

                        android:layout_marginRight="40dp"
                        android:ellipsize="end"/>






                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="2dp"
                        android:weightSum="3"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Range -"
                            android:layout_weight=".4"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min- "

                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"/>




                        <TextView
                            android:id="@+id/textRupeeMin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/indian_rupees"

                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/textItemPriceMin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:singleLine="true"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:text="250.00"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14dp" />
                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:layout_weight="1"
                            android:textSize="20dp"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"/>-->


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Max- "

                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"/>

                        <TextView
                            android:id="@+id/textRupeeMax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/indian_rupees"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/textItemPriceMax"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3"
                            android:singleLine="true"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:text="250.00"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14dp" />



                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>