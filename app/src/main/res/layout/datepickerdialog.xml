<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"

    android:layout_height="430dp"
    android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center_horizontal"
            android:background="@color/newbackgroundcolor"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/newbackgroundcolor"
        android:orientation="vertical">
            <groots.app.com.groots.utilz.TextViewLatoRegular
                android:id="@+id/header"
                android:textColor="@color/newtextcolorprimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Choose Delivery Date"
                android:textSize="20dp" />
</LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/newColorPrimaryGREEN"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:background="@color/newbackgroundcolor"
                android:layout_marginTop="45dp"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:id="@+id/main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <groots.app.com.groots.utilz.TextViewLatoRegular
                        android:id="@+id/datetxtd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:hint="Choose Delivery Date"
                        android:textColorHint="@color/newhintcolor"
                        android:paddingRight="5dp"
                        android:paddingTop="4dp"
                        android:textSize="15dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/view"></View>


                    <ImageView
                        android:layout_marginRight="10dp"
                        android:id="@+id/btnclik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:src="@drawable/calender_new_design" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view"></View>

                <groots.app.com.groots.utilz.TextViewLatoRegular
                    android:layout_marginTop="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/newtextcolorsecondary"
                    android:layout_gravity="start"
                    android:text="Add Comment "
                    android:textSize="18dp" />

                <EditText
                    android:layout_marginTop="8dp"
                    android:id="@+id/commentbox"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/dialogedit"
                    android:gravity="start"
                    android:textCursorDrawable="@drawable/new_design_cursor"
                    android:hint="Type here to add your comment..."
                    android:textColorHint="@color/newhintcolor"
                    android:paddingLeft="8dp"
                    android:textSize="15dp"
                    android:paddingTop="3dp" />


            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:background="@color/newbackgroundcolor"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <groots.app.com.groots.utilz.TextViewLatoRegular
                android:id="@+id/textcancel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/newbackgroundcolor"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:text="Cancel"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/newthirdgreen"
                android:textSize="15dp" />

            <groots.app.com.groots.utilz.TextViewLatoRegular
                android:id="@+id/textdone"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Save"
                android:textColor="#ffffff"
                android:textSize="14dp" />


        </LinearLayout>
        </LinearLayout>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cdDatePicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"></android.support.design.widget.CoordinatorLayout>

</RelativeLayout>