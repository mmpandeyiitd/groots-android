<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end">


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cdLanding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/newbackgroundcolor"
        android:fitsSystemWindows="true"
        tools:context=".ui.LandingUI">

        <RelativeLayout
            android:id="@+id/blank_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/notfound" />

            <groots.app.com.groots.utilz.TextViewLatoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="7dp"
                android:text="Sorry! nothing found. "
                android:textSize="16sp" />


        </RelativeLayout>










        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbars"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/newColorPrimaryGREEN"
            android:contentInsetLeft="0dp"
            android:contentInsetStart="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <groots.app.com.groots.utilz.TextViewLatoRegular
                    android:id="@+id/headername"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="My Orders"
                    android:textColor="@color/white"
                    android:textSize="18dp" />













            </LinearLayout>
        </android.support.v7.widget.Toolbar>














        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:weightSum="1"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/new_design_blank"

                android:layout_gravity="top"


                android:orientation="vertical"

                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:id="@+id/client_name_id"

                    android:text=""
                    android:textSize="20dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/newtextcolorprimary"
                    >

                </TextView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="20dp"
                        android:textColor="@color/newtextcolorsecondary"
                        android:text="Sales Representative :"
                        android:gravity="left"
                        />


                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="20dp"
                        android:id="@+id/sales_name_id"
                        android:textAllCaps="true"
                        android:gravity="left"
                        android:text=""
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/newtextcolorprimary"
                        android:textStyle="normal"

                        />





                </LinearLayout>

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="20dp"
                        android:text="Collection Representative :"
                        android:gravity="left"
                        />


                    <TextView
                        android:layout_width="192dp"
                        android:layout_height="20dp"
                        android:id="@+id/collection_name_id"
                        android:textAllCaps="true"
                        android:gravity="left"
                        android:layout_marginLeft="100dp"
                        android:text="ghitorni"
                        android:textColor="@color/textGreen"
                        android:textStyle="bold"

                        />







                </LinearLayout>-->


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"


                    android:orientation="horizontal">




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Total outstanding amount as of "
                        android:textSize="12dp"
                        android:textColor="@color/newtextcolorsecondary"
                        android:textStyle="italic"


                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text=""
                        android:id="@+id/daily_date_id"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="05dp"
                        android:layout_height="20dp"
                        android:text=":"/>


                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:text="@string/indian_rupees"
                        android:textColor="@color/newColorPrimaryRED"


                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text=""
                        android:textSize="11dp"
                        android:textStyle="normal"
                        android:gravity="right"

                        android:id="@+id/outstanding_rupees_id"
                        android:textColor="@color/newColorPrimaryRED"
                        />



                </LinearLayout>









            </LinearLayout>



            <android.support.v7.widget.RecyclerView
                android:id="@+id/detail_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/listfooter"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end|bottom"
            android:background="#edffffff"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/viewid"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/view"></View>

            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/loadermain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <groots.app.com.groots.utilz.Loader
                android:id="@+id/rotate"
                android:layout_width="56dp"
                android:layout_height="56dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loadermainfooter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <groots.app.com.groots.utilz.Loader
                    android:id="@+id/rotatefooter"
                    android:layout_width="56dp"
                    android:layout_height="56dp" />
            </LinearLayout>
        </RelativeLayout>



    </android.support.design.widget.CoordinatorLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:fitsSystemWindows="false">

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


        <include
            android:id="@+id/include_nav"
            layout="@layout/navigation"
            ></include>
        </ScrollView>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>