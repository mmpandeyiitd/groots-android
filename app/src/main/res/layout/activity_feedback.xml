<?xml version="1.0" encoding="utf-8"?>


<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cdLogin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbars"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/header_green_texture"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        >



        <groots.app.com.groots.utilz.TextViewLatoRegular
            android:id="@+id/headername"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="85dp"
            android:gravity="center_vertical"

            android:text="GIVE YOUR FEEDBACK"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <LinearLayout
            android:id="@+id/callicon"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/makecall"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="0dp"

                android:src="@drawable/call"
                android:background="@null"/>
        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:background="@color/detailSec"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text ="What went wrong? \n "
            android:gravity="center_horizontal"

            android:textColor="@color/drawer_header"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:textStyle="italic"
            android:text = "Please share your feedback with us."
            android:gravity="center_horizontal"

            android:textColor="@color/drawer_header"
            android:textSize="15dp"
            />


    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:orientation="vertical"
    android:background="@color/detailSec">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <CheckBox
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:text="Late Delivery"
        android:textSize="15dp"
        android:buttonTint="@color/drawer_header"
        android:textColorHighlight="@color/detailSec"
        android:textColor="@color/drawer_header"
        android:id="@+id/late_delivery"/>




   <!-- <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:shadowColor="@color/drawer_header"

        android:id="@+id/editText1" />-->

    <CheckBox
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Delivery Boy Behaviour"
        android:textSize="15dp"
        android:buttonTint="@color/drawer_header"
        android:textColor="@color/drawer_header"
        android:id="@+id/delivery_boy_behave"/>


    </LinearLayout>


   <!-- <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"

        android:id="@+id/editText2" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <CheckBox
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:text="Incomplete Order"
        android:buttonTint="@color/drawer_header"
        android:textSize="15dp"
        android:textColor="@color/drawer_header"
        android:id="@+id/incomplete_order"/>


   <!-- <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"

        android:id="@+id/editText3" />-->

    <CheckBox
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Product Quality"
        android:layout_marginLeft="11dp"
        android:buttonTint="@color/drawer_header"
        android:textSize="15dp"
        android:textColor="@color/drawer_header"
        android:id="@+id/quality_product"/>
        </LinearLayout>


    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"

        android:id="@+id/editText4" />-->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <CheckBox
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Other"


            android:textSize="15dp"
            android:textColor="@color/drawer_header"
            android:buttonTint="@color/drawer_header"
            android:id="@+id/other"/>

    <CheckBox
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="Pricing"
        android:layout_marginLeft="80dp"

        android:buttonTint="@color/drawer_header"
        android:textSize="15dp"
        android:textColor="@color/drawer_header"
        android:id="@+id/pricing"/>

   <!-- <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:inputType="textMultiLine"
        android:shadowColor="@color/drawer_header"


        android:id="@+id/editText5" />-->





        </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:textCursorDrawable="@drawable/new_design_cursor"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:shadowColor="@color/drawer_header"

        android:id="@+id/comment" />

</LinearLayout>


    <Button
        android:text="SUBMIT"
        android:gravity="center"
        android:layout_gravity="center"

        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/feedback_submit_btn" />






</LinearLayout>

</android.support.design.widget.CoordinatorLayout>
