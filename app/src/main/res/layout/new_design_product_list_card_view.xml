        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/newbackgroundcolor"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal"
            android:gravity="center">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:background="@color/white"

                >




                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="1.3"
                    android:scaleY="1.3"

                    android:gravity="left|center"
                    android:button="@drawable/new_design_radio_button"

                    android:checked="false"
                    android:clickable="false"

                    android:id="@+id/checkbox1"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"

                    android:gravity="left"
                    android:orientation="horizontal">




                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"


                        android:orientation="vertical">



                        <TextView
                            android:id="@+id/textItemName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textColor="@color/newtextcolorprimary"
                            android:text="Nasik Onion"



                            android:textSize="16dp" />



                        <!--<TextView
                            android:id="@+id/textItemdesc"
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Xyz (1 Kg)"
                            android:textSize="12dp"
                            android:maxLines="1"
                            android:layout_marginRight="40dp"
                            android:ellipsize="end"/>-->

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="40dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textRupee"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/indian_rupees"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:textColor="@color/newSecondcolorgreen"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/textItemPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:singleLine="true"
                                android:layout_gravity="center"
                                android:layout_marginBottom="2dp"
                                android:text="250"
                                android:textColor="@color/newSecondcolorgreen"
                                android:textSize="14dp" />


                        </LinearLayout>



                    </LinearLayout>















































                </LinearLayout>























            </LinearLayout>
























        </LinearLayout>
    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"




        android:layout_marginTop="0dp"

        android:background="@color/newhintcolor"

        />













